{
  "name": "pg-broker",
  "version": "1.0.0",
  "description": "Postgresql backed message broker inspired by Rabbitmq",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --forceExit --detectOpenHandles --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "message",
    "broker",
    "typescript"
  ],
  "author": "Peter Epsteen",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@types/pg": "^7.14.1",
    "@types/uuid": "^3.4.7",
    "pg": "^7.18.1",
    "pg-hstore": "^2.3.3",
    "uuid": "^3.4.0"
  }
}
